    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI (Console preview)",
            "type": "debugpy",
            "request": "launch",
            "module": "labelle.cli.cli",
            "args": [
                "--output=console",
                "--verbose",
                "--tape-size-mm=12",
                "hi",
            ],
            "justMyCode": false,
        },
        {
            "name": "CLI (Printer)",
            "type": "debugpy",
            "request": "launch",
            "module": "labelle.cli.cli",
            "args": [
                "--output=printer",
                "--verbose",
                "--tape-size-mm=12",
                "hi",
            ],
            "justMyCode": false,
        },
        {
            "name": "CLI (Printer); --sample-pattern 320",
            "type": "debugpy",
            "request": "launch",
            "module": "labelle.cli.cli",
            "args": [
                "--output=printer",
                "--verbose",
                // "--tape-size-mm=12",
                // "hi",
                "--sample-pattern", "320"
            ],
            "justMyCode": false,
        },
        {
            "name": "CLI (Printer); --barcode-with-text abc123 --tape-size-mm 25",
            "type": "debugpy",
            "request": "launch",
            "module": "labelle.cli.cli",
            "args": [
                "--output=printer",
